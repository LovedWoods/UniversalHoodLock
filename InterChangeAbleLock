local keybind = "t";
local enablekey = "y";
local range = 15;
local NotiEnabled = true
local Offset = 0.4;

local uis = game:GetService("UserInputService")
local player = game.Players.LocalPlayer
local mouse = player:GetMouse()
local camera = game.Workspace.Camera
local enabled = false
local targeting = false
local target = nil
local rs = game:GetService("RunService")
local function Noti(Text)
	if NotiEnabled == true then
		local Sound = Instance.new("Sound")
		Sound.SoundId = "rbxassetid://8486683243"
		Sound.Parent = game.Players.LocalPlayer.PlayerGui
		Sound:Play()
		game:GetService("StarterGui"):SetCore("SendNotification",{
			Title = "Aimlock Notification";
			Text = Text;
		})
	end
end
Noti("Woods Aimlock V0.32")
uis.InputBegan:Connect(function(key,gpe)
	if gpe then return end
	if key.KeyCode == Enum.KeyCode[string.upper(keybind)] then
		if target == nil then
			for instancenumber,plr in pairs(game.Players:GetPlayers()) do
				if plr.Name ~= player.Name then
					if plr.Character then
						if (plr.Character.HumanoidRootPart.Position-mouse.Hit.Position).Magnitude <= range then
							target = plr.Character
							Noti("Locked Onto "..plr.Name)
							task.wait(0.25)
						end
					end
				end
			end
		elseif target ~= nil then
			Noti("Unlocked From "..target.Name)
			target = nil
		end
	elseif key.KeyCode == Enum.KeyCode[string.upper(enablekey)] then
		if enabled == true then
			enabled = false
			Noti("Disabled Aimlock")
		elseif enabled == false then
			enabled = true
			Noti("Enabled Aimlock")
		end
	end
end)

rs.RenderStepped:Connect(function(delta)
	if enabled == true then
		if target ~= nil then
			pcall(function()
				if target:FindFirstChild("Humanoid") then
					if target:FindFirstChild("Humanoid").Health <= 5 then
						Noti(target.Name.." Has Died")
						target = nil
						task.wait(0.25)
					end
				end
			end)
			camera.CFrame = CFrame.new(camera.CFrame.Position,(target.HumanoidRootPart.CFrame.Position + (target.Humanoid.MoveDirection+Vector3.new(0,1,-Offset))))
		end
	end
end)
